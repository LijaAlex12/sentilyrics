<!DOCTYPE html>
<html>
  <head><% include partials/head %></head>
  <body>
    <header><% include partials/header %></header>

    <!-- <h1>What words are used in song...</h1> -->
   
    <div class="col-lg-6 col-lg-offset-4" id="lyricsSearchForm" style="display:none">
      <form class="form-horizontal col-lg-6" action="/lyrics" method="post">
        <fieldset>
          <legend>Song Lyric Sentiment</legend>
          <div class="form-group">
            <label class="col-lg-1 control-label">Artist</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" for="focusedInput" name="artistSearch" placeholder="enter artist">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-1 control-label">Song</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" for="focusedInput" name="songSearch" placeholder="enter song">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-2 col-lg-offset-4">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>          
        </fieldset>
      </form>
    </div>

    <div class="col-lg-6 col-lg-offset-4" id="songTitleSearchForm" style="display:none">
      <form class="form-horizontal col-lg-6" action="/titles" method="post">
        <fieldset>
          <legend>Artist Song Titles Sentiment</legend>
          <div class="form-group">
            <label class="col-lg-1 control-label">Artist</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" for="focusedInput" name="artistSearch" placeholder="enter artist">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-1 control-label">Song</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" for="focusedInput" name="songSearch" placeholder="enter song" disabled="">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-2 col-lg-offset-4">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>          
        </fieldset>
      </form>
    </div>

    <div class="jumbotron">
      <h1>SentiLyrics</h1>
      <p>Sentiment analysis on a song lyric or an artist's song titles</p>
      <a href="#" id="loadLyricsFormButton" class="btn btn-success btn-lg">Lyrics</a>
      <a href="#" id="loadSongTitlesFormButton" class="btn btn-success btn-lg">Song Titles</a>
    </div>   

    <div id="formButtonsDiv" class="col-lg-3 col-lg-offset-4" style="display:none">
      <div class="btn-group btn-group-justified">
        <a href="#" id="loadLyricsFormButton" class="btn btn-success btn-lg">Lyrics</a>
        <a href="#" id="loadSongTitlesFormButton" class="btn btn-success btn-lg">Song Titles</a>
      </div>
    </div>

    <script type="text/javascript">
      $('#loadLyricsFormButton').on('click', function(){
        $('.jumbotron').hide();
        $('#lyricsSearchForm').show();
        $('#formButtonsDiv').show();
        $('#songTitleSearchForm').hide();
      });

      $('#loadSongTitlesFormButton').on('click', function(){
        $('.jumbotron').hide();
        $('#songTitleSearchForm').show();
        $('#formButtonsDiv').show();
        $('#lyricsSearchForm').hide();
      });

    </script>

  </body>
</html>